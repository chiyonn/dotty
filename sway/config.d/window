# moving window
    bindsym $mod+Shift+$left move left 80px
    bindsym $mod+Shift+$down move down 80px
    bindsym $mod+Shift+$up move up 80px
    bindsym $mod+Shift+$right move right 80px

# resize window
    bindsym $mod+Ctrl+h resize shrink width 80px
    bindsym $mod+Ctrl+j resize grow height 80px
    bindsym $mod+Ctrl+k resize shrink height 80px
    bindsym $mod+Ctrl+l resize grow width 80px

