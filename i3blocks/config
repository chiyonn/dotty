[memory]
command=free -h | awk '/^Mem:/ { print "MEM: " $3 "/" $2 }'
interval=5
color=#b8bb26

[cpu]
command=top -bn1 | awk '/^%Cpu/ {printf "CPU: %.0f%%", 100 - $8}'
interval=5

[network]
command=ip route get 1.1.1.1 | awk '{print "IP: " $7}'
interval=10

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
