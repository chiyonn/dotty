include ~/.config/i3/colors.conf
include ~/.config/i3/autostart.conf
include ~/.config/i3/bar.conf

# keys
set $mod Mod1
set $left h
set $down j
set $up k
set $right l
set $fontsize 12 

## apps
set $terminal alacritty
set $browser brave-browser
set $launcer dmenu_run

## commands
set $refresh_i3status killall -SIGUSR1 i3status
set $screenshot_to_clipboard bash -c 'maim -s | xclip -selection clipboard -t image/png && notify-send "Screenshot copied"'

font pango:monospace $fontsize
floating_modifier $mod
tiling_drag modifier titlebar

# launchers
bindsym $mod+o exec $browser
bindsym $mod+u exec $browser "https://chatgpt.com/?temporary-chat=true"
bindsym $mod+y exec $browser "https://www.youtube.com/"
bindsym $mod+Return exec $terminal
bindsym $mod+slash exec --no-startup-id $launcer
bindsym $mod+Shift+s exec --no-startup-id $screenshot_to_clipboard

# scratchpad
bindsym $mod+space [class="Alacritty"] scratchpad show
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+plus move scratchpad
bindsym $mod+Shift+space floating toggle

# windows
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left  move left 80px
bindsym $mod+Shift+$down  move down 80px
bindsym $mod+Shift+$up    move up 80px
bindsym $mod+Shift+$right move right 80px

bindsym $mod+f fullscreen toggle
bindsym $mod+s split v
bindsym $mod+v split h
bindsym $mod+Shift+q kill
#bindsym $mod+ split toggle 
#bindsym $mod+ layout stacking
#bindsym $mod+ layout tabbed

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+n workspace next
bindsym $mod+p workspace prev

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Ctrl+$left  resize shrink width 80 px
bindsym $mod+Ctrl+$right resize grow   width 80 px
bindsym $mod+Ctrl+$up    resize grow   height 80 px
bindsym $mod+Ctrl+$down  resize shrink height 80 px

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+BackSpace exec i3lock -c 222222

#bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
#bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

mode "$mode_audio" {
  bindsym n exec
}

mode "music" {
    bindsym j exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    bindsym k exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
    bindsym n exec playerctl next
    bindsym p exec playerctl previous
    bindsym space exec playerctl play-pause

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"
}
bindsym $mod+m mode "music"


### Colors (Carbonfox)
set $black        #161616
set $dark_gray    #262626
set $gray         #393939
set $light_gray   #6e6e6e
set $white        #e0e0e0

set $red          #ee5396
set $green        #42be65
set $yellow       #f1c21b
set $blue         #33b1ff
set $magenta      #be95ff
set $cyan         #3ddbd9
set $orange       #ff832b

### i3 Client Borders
#                       border     background foreground  indicator   child_border
client.focused          $blue      $black     $white      $cyan       $black
client.focused_inactive $gray      $black     $light_gray $gray       $black
client.unfocused        $dark_gray $black     $light_gray $gray       $black
client.urgent           $red       $black     $white      $red        $black
client.placeholder      $black     $black     $white      $black      $black

### i3 Bar
bar {
    status_command i3blocks

    colors {
        background         $black
        statusline         $white
        separator          $gray

        focused_workspace  $blue      $cyan        $black
        active_workspace   $gray      $cyan        $black
        inactive_workspace $dark_gray $light_gray  $black
        urgent_workspace   $red       $orange      $black
    }

    font pango:Hack Nerd Font Mono $fontsize
}


### AutoStarts
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id fcitx5 -d

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# transparent and more
exec --no-startup-id picom --config ~/.config/picom.conf

# terminal
for_window [class="Alacritty"] move to scratchpad, scratchpad show
exec --no-startup-id alacritty

for_window [class="Blueman-manager"] floating enable

