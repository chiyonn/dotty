
EDITOR=nvim

alias obim="$EDITOR $HOME/Obsidian"
alias zedit="$EDITOR $HOME/.zshrc && source $HOME/.zshrc"
alias aliases="$EDITOR $HOME/.aliases && source $HOME/.aliases"

# Basic ls commands
alias ls='ls --color=auto'         # Colorized ls output
alias ll='ls -lh'                  # Long listing with human-readable sizes
alias la='ls -A'                   # List all entries except . and ..
alias l='ls -CF'                   # Clustered view
alias lla='ls -lha'

alias cp='cp -i'                   # Confirm before overwrite
alias mv='mv -i'                   # Confirm before overwrite
alias rm='rm -i'                   # Confirm before delete

alias grep='grep --color=auto'
alias tree='tree -C -I "node_modules|__pycache__|undodir"'

alias claude-local="claude-bridge openai qwen3:32b --baseURL http://llm.voxon.lan:11434/v1 --apiKey none"
alias hyprconf="cd $HOME/.config/hypr && $EDITOR hyprland.conf"
alias nv="nvim"
alias silverbullet="cd /mnt/silverbullet && $EDITOR index.md"
alias swayconf="cd $HOME/.config/sway && $EDITOR config"
alias systus="systemctl status"
alias t="tmux"
alias tnew="tmux new-session -s"

# for Python
alias activate="source ./.venv/bin/activate"

# for Git
alias gs="git status"
alias ga="git add"
alias gd="git diff"
alias gp="git push"
alias gc="git commit -m"
alias gl="git log"

# for Docker
alias compose="docker compose"


